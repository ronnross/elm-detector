{
  "manifest_version": 2,
  "name": "elm-detector",
  "short_name": "elm-detector",
  "description": "Detects Elm apps as you browse.",
  "author": "Ronn Ross",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources" : ["detector.js"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_icon": "images/elm.png"
  }
}
